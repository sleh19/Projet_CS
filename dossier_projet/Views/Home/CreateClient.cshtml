@model Client
<!doctype html>
<html lang="en">
  <head>
  	<title>Login 10</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

	<link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
	
	<link rel="stylesheet" href="style.css">

	</head>
	<body class="img js-fullheight" style="background-image: url(bg.jpg)">
	<section class="ftco-section">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-md-6 text-center mb-5">
					<h2 class="heading-section">Ajout Client</h2>
				</div>
			</div>
			<div class="row justify-content-center">
				<div class="col-md-6 col-lg-4">
					<div class="login-wrap p-0">

		      	<form asp-action="CreateClient" method="post">
		      		<div class="form-group">
		      			<input type="text" asp-for="NumCin" class="form-control" placeholder="NumCin" required>
		      		</div>
                      		      		<div class="form-group">
		      			<input type="text" asp-for="Prenom" class="form-control" placeholder="Prenom" required>
		      		</div>
                      		      		<div class="form-group">
		      			<input type="text" asp-for="Nom" class="form-control" placeholder="Nom" required>
		      		</div>
                      		      		<div class="form-group">
		      			<input type="text" asp-for="TypeClient" class="form-control" placeholder="TypeClient" required>
		      		</div>
                      		      		<div class="form-group">
		      			<input type="text" asp-for="Adresse" class="form-control" placeholder="Adresse" required>
		      		</div>
                      		      		<div class="form-group">
		      			<input type="text" asp-for="NumPhone" class="form-control" placeholder="NumPhone" required>
		      		</div>
				<br />
	            <div class="form-group">
	            	<button type="submit">Ajouter</button>
	                <button type="reset">Annuler</button>
                </div>
	            <div class="form-group d-md-flex">
	            	<div class="w-50">

								</div>
	            </div>
	          </form>
			  <a asp-action="AllClients">Retour</a>
		      </div>
				</div>
			</div>
		</div>
	</section>

	<script src="js/jquery.min.js"></script>
  <script src="js/popper.js"></script>
  <script src="js/bootstrap.min.js"></script>
  <script src="js/main.js"></script>

</body>
</html>








